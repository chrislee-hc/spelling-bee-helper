{
  "manifest_version": 3,
  "name": "Spelling Bee Hints+",
  "description": "A more usable hints tool for the New York Times' Spelling Bee game",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/bee16.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.nytimes.com/puzzles/spelling-bee/*"
      ],
      "css": ["stylesheet.css"]
    }
  ]
}